@model WassetPortal.Models.ViewModels.LoginVM

@{ Layout = null; }
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Wasset Admin</title>
    <!-- base:css -->
    <link rel="stylesheet" href="~/wwwroot/vendors/typicons/typicons.css">
    <link rel="stylesheet" href="~/wwwroot/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/wwwroot/css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/wwwroot/images/favicon.png" />
    <link href="~/Content/Main.css" rel="stylesheet" />
</head>
@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{

    <body>
        <div class="container-scroller">
            <div class="container-fluid page-body-wrapper full-page-wrapper">
                <div class="content-wrapper d-flex align-items-center auth px-0 LoginBg">
                    <div class="row w-100 mx-0">
                        <div class="col-lg-4 mx-auto">
                            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                                <div class="brand-logo">
                                    <img src="~/wwwroot/images/sprites/Logo.svg" alt="logo">
                                </div>
                                <h4>MCC makes PCR faster and easier </h4>
                                <h6 class="font-weight-light">Sign in to continue.</h6>
                                <form class="pt-3">
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.UserName, new { placeholder = "Email", @class = "form-control form-control-lg" })
                                    </div>
                                    <div class="form-group">

                                        @Html.TextBoxFor(m => m.PassWord, new { placeholder = "PassWord", @class = "form-control form-control-lg" })

                                    </div>
                                    <div class="mt-3">
                                        @*<a id="LoginBtt" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" href="~/wwwroot/index.html">SIGN IN</a>*@

                                        <input type="submit" value="SIGN IN" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" />
                                    </div>
                                    <div class="my-2 d-flex justify-content-between align-items-center">
                                        <div class="form-check">
                                            <label class="form-check-label text-muted">
                                                <input type="checkbox" class="form-check-input">
                                                Keep me signed in
                                            </label>
                                        </div>
                                        <a href="#" class="auth-link text-black">Forgot password?</a>
                                    </div>
                                    <div class="mb-2">
                                        <button type="button" class="btn btn-block btn-facebook auth-form-btn">
                                            <i class="typcn typcn-social-facebook mr-2"></i>Connect using facebook
                                        </button>
                                    </div>
                                    <div class="text-center mt-4 font-weight-light">
                                        Don't have an account? <a href="register.html" class="text-primary">Create</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- content-wrapper ends -->
            </div>
            <!-- page-body-wrapper ends -->
        </div>
        <!-- container-scroller -->
        <!-- base:js -->
        <script src="~/wwwroot/vendors/js/vendor.bundle.base.js"></script>
        <!-- endinject -->
        <!-- inject:js -->
        <script src="~/wwwroot/js/off-canvas.js"></script>
        <script src="~/wwwroot/js/hoverable-collapse.js"></script>
        <script src="~/wwwroot/js/template.js"></script>
        <script src="~/wwwroot/js/settings.js"></script>
        <script src="~/wwwroot/js/todolist.js"></script>
        <!-- endinject -->
    </body>
}
</html>

@section Scripts{
    @if (TempData["message"] != null)
    {
        <script>alert('@TempData["message"]');</script>
    }
}