
@model List<WassetPortal_DAL.Models.Organization>

<button class="btn btn-primary" onclick="_UserIndexHandler.CreateOrg()">Create Org</button>
<table class="table table-striped table-dark col-md-9">
    <thead>
        <tr>
            <th scope="col">Organization ID</th>
            <th scope="col">Organization Name</th>
            <th scope="col">Organization Address</th>
            <th scope="col">organization status</th>
            <th scope="col">option</th>
        </tr>
    </thead>
    <tbody>
        @{
            if (Model != null)
            {
                foreach (var org in Model)
                {
                    <tr>
                        <th scope="row">@org.OrgID</th>
                        <td>@org.OrgName</td>
                        <td>@org.OrgAddress</td>
                        @{ if (org.OrgStatus == true)
                            {
                                <td>
                                    Active
                                </td>
                            }
                            else
                            {
                                <td>
                                    Not Active
                                </td>
                            }
                        }
                    <td>
                        <span onclick="_UserIndexHandler.CreateOrg(@org.OrgID)">Edit</span>
                    </td>
                    </tr>
                }
            }
        }
    </tbody>
</table>
