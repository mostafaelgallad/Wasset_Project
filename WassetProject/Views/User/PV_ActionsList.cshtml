
@model List<WassetPortal_DAL.Models.Action>
<button class="btn btn-primary" onclick="_UserIndexHandler.CreateAction()">Create Action</button>
<table class="table table-striped table-dark col-md-9">
    <thead>
        <tr>
            <th scope="col">Action ID</th>
            <th scope="col">Action Name</th>
            <th scope="col">Description</th>
            <th scope="col">Action status</th>
            <th scope="col">option</th>
        </tr>
    </thead>
    <tbody>
        @{
            if (Model != null)
            {
                foreach (var action in Model)
                {
                    <tr>
                        <th scope="row">@action.ActionID</th>
                        <td>@action.ActionName</td>
                        <td>@action.Description</td>
                        @{ if (action.ActionStatus == true)
                            {
                                <td>
                                    Active
                                </td>
                            }
                            else
                            {
                                <td>
                                    Not Active
                                </td>
                            }
                        }
                        <td>
                            <span onclick="_UserIndexHandler.CreateAction('@action.ActionName')">Edit</span>
                        </td>
                    </tr>
                }
            }
        }
    </tbody>
</table>
