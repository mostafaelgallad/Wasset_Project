@model WassetPortal_DAL.Models.Role

<form id="RoleForm" action="/user/CreateRole" type="Post">
    <input type="text" placeholder="Organization Name" value="@Model.RoleName" name="RoleName" id="RoleName" />
    <input type="hidden" placeholder="Organization Name" value="@Model.RoleID" name="RoleID" id="RoleID" />
    <input type="hidden" placeholder="Organization Name" value="true" name="RoleStatus" id="RoleStatus" />
    <input type="hidden" value="@ViewBag.IsEditMode" id="EditMode" />
    <button class="btn btn-primary">Submit</button>
</form>